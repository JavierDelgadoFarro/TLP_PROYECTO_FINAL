
@{
    ViewBag.Title = "Usuarios";
    Layout = "~/Views/Shared/MasterPage.cshtml";
}

<div class="container">
    <div class="row">
        <div class="col-md-12">
            <form>

                <div class="form-group">
                    <label for="usu_emp" class="control-label">Empleado</label>
                    <select class="form-control" id="usu_emp">
                        <option>Javier Delgado</option>
                        <option>Jennifer Coronado</option>
                        <option>Harvy Albarrán</option>
                        <option>Jesenia Sempertegui</option>
                    </select>
                </div>

                <div class="form-group">
                    <label for="usu_nomb" class="control-label">Nombre de Usuario</label>
                    <input type="text" class="form-control" id="usu_nomb" name="usu_nomb">
                </div>

                <div class="form-group">
                    <label for="usu_pass" class="control-label">Contraseña</label>
                    <input type="password" class="form-control" id="usu_pass" name="usu_pass">
                </div>

                <div class="form-group">
                    <label for="usu_tip" class="control-label">Tipo de Usuario</label>
                    <select class="form-control" id="usu_tip">
                        <option>Administrador</option>
                        <option>Jefe de almacén</option>
                        <option>Almacenero</option>
                        <option>encargado de ordenamiento</option>
                    </select>
                </div>

                <div class="form-group">
                    <!-- Submit Button -->
                    <button type="submit" class="btn btn-primary">Registrar</button>
                    <button type="button" class="btn btn-danger">Cancelar</button>
                </div>
        </div>
    </div>
    </form>

